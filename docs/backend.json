
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user in the system.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique identifier for the user, from Firebase Auth."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
            "type": "string",
            "format": "uri",
            "description": "URL of the user's profile picture."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the user account was created."
        },
        "messageCount": {
          "type": "number",
          "description": "The number of messages the user has generated."
        }
      },
      "required": [
        "uid",
        "email",
        "createdAt",
        "messageCount"
      ]
    },
    "GeneratedMessage": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "GeneratedMessage",
      "type": "object",
      "description": "Represents a generated sales message.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the GeneratedMessage entity."
        },
        "salesTagId": {
          "type": "string",
          "description": "Reference to SalesTag. (Relationship: SalesTag 1:N GeneratedMessage)"
        },
        "niche": {
          "type": "string",
          "description": "The specific niche the message is tailored for."
        },
        "messageText": {
          "type": "string",
          "description": "The generated sales message text."
        },
        "generationTimestamp": {
          "type": "string",
          "description": "Timestamp indicating when the message was generated.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "salesTagId",
        "niche",
        "messageText",
        "generationTimestamp"
      ]
    }
  },
  "auth": {
    "providers": [
      "google"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores user profiles.",
          "params": [
            {
              "name": "userId",
              "description": "Unique identifier for the user."
            }
          ]
        }
      },
      {
        "path": "/users/{userId}/generatedMessages/{generatedMessageId}",
        "definition": {
          "entityName": "GeneratedMessage",
          "schema": {
            "$ref": "#/backend/entities/GeneratedMessage"
          },
          "description": "Stores generated sales messages for each user. Path-based ownership is enforced through the /users/{userId} path, ensuring that only the authenticated user can access their own messages.",
          "params": [
            {
              "name": "userId",
              "description": "Unique identifier for the user."
            },
            {
              "name": "generatedMessageId",
              "description": "Unique identifier for the generated message."
            }
          ]
        }
      }
    ]
  }
}

    