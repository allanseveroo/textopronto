
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user in the system.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique identifier for the user, from Firebase Auth."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
            "type": "string",
            "format": "uri",
            "description": "URL of the user's profile picture."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the user account was created."
        },
        "messageCount": {
          "type": "number",
          "description": "The number of messages the user has generated."
        },
        "plan": {
          "type": "string",
          "description": "The user's subscription plan (e.g., 'free', 'pro').",
          "enum": ["free", "pro"]
        }
      },
      "required": [
        "uid",
        "email",
        "createdAt",
        "messageCount",
        "plan"
      ]
    },
    "Message": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Message",
      "type": "object",
      "description": "Represents a generated message by a user.",
      "properties": {
        "message": {
          "type": "string",
          "description": "The content of the generated message."
        },
        "salesTag": {
          "type": "string",
          "description": "The sales tag associated with the message."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the message was created."
        }
      },
      "required": [
        "message",
        "salesTag",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "google"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores user profiles.",
          "params": [
            {
              "name": "userId",
              "description": "Unique identifier for the user."
            }
          ]
        }
      },
      {
        "path": "/users/{userId}/messages/{messageId}",
        "definition": {
          "entityName": "Message",
          "schema": {
            "$ref": "#/backend/entities/Message"
          },
          "description": "Stores messages generated by a user.",
          "params": [
            {
              "name": "userId",
              "description": "The user's ID."
            },
            {
              "name": "messageId",
              "description": "The message's ID."
            }
          ]
        }
      }
    ]
  }
}
